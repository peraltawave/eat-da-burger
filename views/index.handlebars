<h1>Time to eat, son</h1>
<br>

<div id='available'>
    <h2>Burgers Available to Eat:</h2>
    <ul>
        {{#each burgers}} {{#unless this.devoured}}
        <li>
            {{this.id}}. {{this.burger_name}} 
            {{!-- ^^ This will return a list of burgers --}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
                <button class="btn btn-warning" type="submit">Eat Me!</button>
            </form>

        </li>
        {{/unless}} {{/each}}
    </ul>
</div>
<div id='devoured'>
    <h2>Burgers that have <br>Been Devoured: </h2>

    <ul>
        {{#each burgers}} {{#if this.devoured}}
        <li>
            {{this.id}}. {{this.burger_name}}
            {{!-- This returns a list of burgers that have been eaten already  --}}
        </li>
        {{/if}} {{/each}}
    </ul>
</div>

<div id="add" style="background-color: white; padding: 20px; font-family: 'Arvo', serif; width: 100%;">
    <h2>Add a Burger: </h2>

    <form class="create-update-form" action="/" method="POST">
        <div class="form-group">
            <label for="dab">Burger Name:</label>
            <input type="text" id="dab" name="burger_name">
        </div>
        <button class="btn btn-primary" type="submit">Add a Burger</button>
    </form>
</div>